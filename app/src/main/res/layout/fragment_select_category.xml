<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen_main.select_category"
    android:background="@color/background">


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.constraintlayout.utils.widget.ImageFilterButton

                android:id="@+id/button1"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_select_category"
                android:src="@drawable/ic_button_select_category_phone_on" />

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/button2"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_select_category_off"
                android:src="@drawable/ic_button_select_category_comp_off" />

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/button3"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_select_category_off"
                android:src="@drawable/ic_button_select_category_health_off" />

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/button4"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_select_category_off"
                android:src="@drawable/ic_button_select_category_book_off" />
        </LinearLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>